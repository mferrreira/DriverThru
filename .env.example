# App
APP_NAME=DriverThru API
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO
API_ROOT_PATH=/api

# Postgres
POSTGRES_DB=example_databasename
POSTGRES_USER=example_databaseuser
POSTGRES_PASSWORD=example_databasepassword

# SQLAlchemy connection
DATABASE_URL=postgresql+psycopg://example_databaseuser:example_databasepassword@db:5432/example_databasename
SQLALCHEMY_ECHO=false

# MinIO
MINIO_ROOT_USER=miniouser
MINIO_ROOT_PASSWORD=miniopassword

# Internal Docker endpoint
MINIO_ENDPOINT=miniourl:9000
MINIO_BUCKET=bucketname
MINIO_SECURE=false
MINIO_STARTUP_STRICT=false

# Document templates
DOCUMENTS_DIR=../documents
GENERATED_DOCUMENTS_PREFIX=generated-documents

# Auth / JWT
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480
AUTH_COOKIE_NAME=driverthru_access_token
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax
AUTH_USERS_JSON=[{"username":"admin","password":"admin123","role":"admin"},{"username":"operator","password":"operator123","role":"operator"}]
