# App
APP_NAME=DriverThru API
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO
API_ROOT_PATH=/api

# Postgres
POSTGRES_DB=driverthru
POSTGRES_USER=driverthru
POSTGRES_PASSWORD=super_secret_password

# SQLAlchemy connection
DATABASE_URL=postgresql+psycopg://driverthru:super_secret_password@db:5432/driverthru
SQLALCHEMY_ECHO=false

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# Internal Docker endpoint
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=driverthru
MINIO_SECURE=false
MINIO_STARTUP_STRICT=false

# Document templates
DOCUMENTS_DIR=../documents
GENERATED_DOCUMENTS_PREFIX=generated-documents

# Auth / JWT
JWT_SECRET_KEY=driverthru-local-secret-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480
AUTH_COOKIE_NAME=driverthru_access_token
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax
AUTH_USERS_JSON=[{"username":"admin","password":"admin123","role":"admin"},{"username":"operator","password":"operator123","role":"operator"}]
